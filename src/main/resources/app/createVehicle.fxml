<VBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CreateVehicle">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" onAction="#goToMenu" text="Menu">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#goToMenu" text="Menu" />
                    </items>
                </Menu>
            </menus>

        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="500.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="344.0" layoutY="79.0" text="Novo Veículo">
                    <font>
                        <Font name="Ricardo-Regular" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="185.0" layoutY="166.0" text="Marca :">
               <font>
                  <Font name="Ricardo-Regular" size="14.0" />
               </font></Label>
                <Label layoutX="185.0" layoutY="210.0" text="Modelo :">
               <font>
                  <Font name="Ricardo-Regular" size="14.0" />
               </font></Label>
                <Label layoutX="185.0" layoutY="254.0" text="N° da placa :">
               <font>
                  <Font name="Ricardo-Regular" size="14.0" />
               </font></Label>
                <TextField fx:id="brand" layoutX="294.0" layoutY="162.0" prefHeight="26.0" prefWidth="253.0" />
                <TextField fx:id="model" layoutX="294.0" layoutY="206.0" prefHeight="26.0" prefWidth="254.0" />
                <TextField fx:id="plate" layoutX="294.0" layoutY="250.0" prefHeight="26.0" prefWidth="254.0" />
                <Button fx:id="cancelBtn" layoutX="306.0" layoutY="354.0" mnemonicParsing="false" onAction="#goToMenu" text="Cancelar">
               <font>
                  <Font name="Ricardo-Regular" size="14.0" />
               </font></Button>
                <Button fx:id="createBtn" layoutX="422.0" layoutY="354.0" mnemonicParsing="false" onAction="#createVehicle" prefHeight="28.0" prefWidth="67.0" text="Gravar">
               <font>
                  <Font name="Ricardo-Regular" size="14.0" />
               </font></Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
